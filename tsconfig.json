{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "pretty": true
  },
  "include": ["packages"],
  "exclude": ["node_modules", "lib", "es", "./src/**/*.test.ts"]
}
