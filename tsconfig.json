{
  "compilerOptions": {
    "target": "ES2016",
    "strict": true,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "pretty": true,
    "jsx": "react",
    "noEmitHelpers": true,
    "importHelpers": false
  },
  "include": ["packages"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "./packages/**/*.test.ts",
    "./packages/**/*.less"
  ]
}
